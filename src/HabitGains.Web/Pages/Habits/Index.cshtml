@page
@using HabitGains.Application.Habits
@using HabitGains.Web.ViewModels.Habits
@model Habits.IndexModel
@{
    ViewData["Title"] = "Home";
}

<h1>Habits</h1>

<div asp-validation-summary="All" class="text-danger"></div>

@if (ModelState.IsValid)
{
    <form asp-page="./Index" method="get" class="d-flex gap-3">
        <div class="input-group w-auto">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <input type="text" class="form-control" placeholder="Search..." name="searchTerm"
                value="@Model.View.SearchTerm" />
            <button type="submit" class="btn btn-primary">
                Search
            </button>
        </div>

        <div class="input-group w-auto">
            <span class="input-group-text">Measurement: </span>
            <select name="measurement" asp-items="Model.View.MeasurementOptions" class="form-select w-auto"
                onchange="this.form.submit()">
                <option value="">All</option>
            </select>
        </div>

        <div class="input-group w-auto">
            <span class="input-group-text">Favorite: </span>
            <select name="favorite" asp-items="@Model.View.FavoriteOptions" class="form-select w-auto"
                onchange="this.form.submit()">
            </select>
        </div>

        <input type="hidden" name="currentPage" value="1" />
        <input type="hidden" name="pageSize" value="@Model.View.Metadata.PageSize" />
        <input type="hidden" name="sortColumn" value="@Model.View.SortColumn" />
        <input type="hidden" name="sortOrder" value="@Model.View.SortOrder" />
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-page="./Index" class="sort-link @(Model.View.SortColumn == "name" ? "sort-active" : "")"
                        asp-route-currentPage="@Model.View.Metadata.Page" asp-route-pageSize="@Model.View.Metadata.PageSize"
                        asp-route-searchTerm="@Model.View.SearchTerm" asp-route-measurement="@Model.View.MeasurementFilter"
                        asp-route-favorite="@Model.View.FavoriteFilter"
                        asp-route-sortOrder="@(Model.View.SortColumn == "name" && Model.View.SortOrder == "asc" ? "desc" : "asc")"
                        asp-route-sortColumn="name">
                        Name
                        @if (Model.View.SortColumn == "name")
                        {
                            <i class="bi @(Model.View.SortOrder == "asc" ? "bi-caret-up-fill" : "bi-caret-down-fill")">
                            </i>
                        }
                    </a>
                </th>
                <th>
                    <a asp-page="./Index" class="sort-link @(Model.View.SortColumn == "measurement" ? "sort-active" : "")"
                        asp-route-currentPage="@Model.View.Metadata.Page" asp-route-pageSize="@Model.View.Metadata.PageSize"
                        asp-route-searchTerm="@Model.View.SearchTerm" asp-route-measurement="@Model.View.MeasurementFilter"
                        asp-route-favorite="@Model.View.FavoriteFilter"
                        asp-route-sortOrder="@(Model.View.SortColumn == "measurement" && Model.View.SortOrder == "asc" ? "desc" : "asc")"
                        asp-route-sortColumn="measurement">
                        Measurement
                        @if (Model.View.SortColumn == "measurement")
                        {
                            <i class="@(Model.View.SortOrder == "asc" ? "bi-caret-up-fill" : "bi-caret-down-fill")"></i>
                        }
                    </a>
                </th>
                <th>
                    <a asp-page="./Index" class="sort-link @(Model.View.SortColumn == "favorite" ? "sort-active" : "")"
                        asp-route-currentPage="@Model.View.Metadata.Page" asp-route-pageSize="@Model.View.Metadata.PageSize"
                        asp-route-searchTerm="@Model.View.SearchTerm" asp-route-measurement="@Model.View.MeasurementFilter"
                        asp-route-favorite="@Model.View.FavoriteFilter"
                        asp-route-sortOrder="@(Model.View.SortColumn == "favorite" && Model.View.SortOrder == "asc" ? "desc" : "asc")"
                        asp-route-sortColumn="favorite">
                        Favorite
                        @if (Model.View.SortColumn == "favorite")
                        {
                            <i class="@(Model.View.SortOrder == "asc" ? "bi-caret-up-fill" : "bi-caret-down-fill")"></i>
                        }
                    </a>
                </th>
                <th>
                    <a asp-page="./Index" class="sort-link @(Model.View.SortColumn == "created" ? "sort-active" : "")"
                        asp-route-currentPage="@Model.View.Metadata.Page" asp-route-pageSize="@Model.View.Metadata.PageSize"
                        asp-route-searchTerm="@Model.View.SearchTerm" asp-route-measurement="@Model.View.MeasurementFilter"
                        asp-route-favorite="@Model.View.FavoriteFilter"
                        asp-route-sortOrder="@(Model.View.SortColumn == "created" && Model.View.SortOrder == "asc" ? "desc" : "asc")"
                        asp-route-sortColumn="created">
                        Created
                        @if (Model.View.SortColumn == "created")
                        {
                            <i class="@(Model.View.SortOrder == "asc" ? "bi-caret-up-fill" : "bi-caret-down-fill")"></i>
                        }
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var habit in Model.View.Habits)
            {
                <tr>
                    <td>@Html.DisplayFor(item => habit.Name)</td>
                    <td>@Html.DisplayFor(item => habit.Measurement)</td>
                    <td>
                        @if (habit.Favorite)
                        {
                            <i class="bi bi-heart-fill text-danger"></i>
                        }
                        else
                        {
                            <i class="bi bi-heart text-danger"></i>
                        }
                    </td>

                    <td>@Html.DisplayFor(item => habit.CreatedAt)</td>
                </tr>
            }
        </tbody>
    </table>

    var start = Math.Max(1, Model.View.Metadata.Page - 1);
    var end = Math.Min(Model.View.Metadata.TotalPages, Model.View.Metadata.Page + 1);

    <div class="d-flex justify-content-between align-items-center mb-3">
        <ul class="pagination mb-0">
            <li class="page-item @(Model.View.Metadata.Page == 1 ? "disabled" : "")">
                <a asp-page="./Index" asp-route-currentPage="1" asp-route-pageSize="@Model.View.Metadata.PageSize"
                    asp-route-searchTerm="@Model.View.SearchTerm" asp-route-measurement="@Model.View.MeasurementFilter"
                    asp-route-favorite="@Model.View.FavoriteFilter" asp-route-sortColumn="@Model.View.SortColumn"
                    asp-route-sortOrder="@Model.View.SortOrder" class="page-link"><i
                        class="bi bi-skip-backward-fill"></i></a>
            </li>
            <li class="page-item @(!Model.View.Metadata.HasPreviousPage ? "disabled" : "")">
                <a asp-page="./Index" asp-route-currentPage="@(Model.View.Metadata.Page - 1)"
                    asp-route-pageSize="@Model.View.Metadata.PageSize" asp-route-sortColumn="@Model.View.SortColumn"
                    asp-route-searchTerm="@Model.View.SearchTerm" asp-route-measurement="@Model.View.MeasurementFilter"
                    asp-route-favorite="@Model.View.FavoriteFilter" asp-route-sortOrder="@Model.View.SortOrder"
                    class="page-link"><i class="bi bi-caret-left-fill"></i></a>
            </li>
            @for (var i = start; i <= end; i++)
            {
                <li class="page-item @(i == Model.View.Metadata.Page ? "active" : "")">
                    <a asp-page="./Index" asp-route-currentPage="@i" asp-route-pageSize="@Model.View.Metadata.PageSize"
                        asp-route-searchTerm="@Model.View.SearchTerm" asp-route-measurement="@Model.View.MeasurementFilter"
                        asp-route-favorite="@Model.View.FavoriteFilter" asp-route-sortColumn="@Model.View.SortColumn"
                        asp-route-sortOrder="@Model.View.SortOrder" class="page-link">@i</a>
                </li>
            }
            <li class="page-item @(!Model.View.Metadata.HasNextPage ? "disabled" : "")">
                <a asp-page="./Index" asp-route-currentPage="@(Model.View.Metadata.Page + 1)"
                    asp-route-pageSize="@Model.View.Metadata.PageSize" asp-route-sortColumn="@Model.View.SortColumn"
                    asp-route-searchTerm="@Model.View.SearchTerm" asp-route-measurement="@Model.View.MeasurementFilter"
                    asp-route-favorite="@Model.View.FavoriteFilter" asp-route-sortOrder="@Model.View.SortOrder"
                    class="page-link"><i class="bi bi-caret-right-fill"></i></a>
            </li>
            <li
                class="page-item @(Model.View.Metadata.Page == Model.View.Metadata.TotalPages || Model.View.Metadata.TotalPages == 0 ? "disabled" : "")">
                <a asp-page="./Index" asp-route-currentPage="@(Model.View.Metadata.TotalPages)"
                    asp-route-pageSize="@Model.View.Metadata.PageSize" asp-route-sortColumn="@Model.View.SortColumn"
                    asp-route-searchTerm="@Model.View.SearchTerm" asp-route-measurement="@Model.View.MeasurementFilter"
                    asp-route-favorite="@Model.View.FavoriteFilter" asp-route-sortOrder="@Model.View.SortOrder"
                    class="page-link"><i class="bi bi-skip-forward-fill"></i></a>
            </li>
        </ul>

        <form asp-page="./Index" method="get" class="d-flex align-items-center">
            <div class="input-group w-auto">
                <span class="input-group-text">Page Size: </span>
                <select name="pageSize" asp-items="Model.View.PageSizeOptions" class="form-select w-auto"
                    onchange="this.form.submit()">
                </select>

                <input type="hidden" name="currentPage" value="@Model.View.Metadata.Page" />
                <input type="hidden" name="searchTerm" value="@Model.View.SearchTerm" />
                <input type="hidden" name="sortColumn" value="@Model.View.SortColumn" />
                <input type="hidden" name="sortOrder" value="@Model.View.SortOrder" />
                <input type="hidden" name="measurement" value="@Model.View.MeasurementFilter" />
                <input type="hidden" name="favorite" value="@Model.View.FavoriteFilter" />
            </div>
        </form>
    </div>
}