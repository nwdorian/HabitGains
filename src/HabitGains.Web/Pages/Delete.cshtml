@page "{id?}"
@model HabitGains.Web.Pages.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

@if (Model.Errors.Any())
{
    <partial name="_ErrorSummary" model="Model.Errors" />
    <a asp-page="./Index" class="btn btn-danger">Back to list</a>
}
else
{
    <h3>Are you sure you want to delete this habit?</h3>
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Habit.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Habit.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Habit.Measurement)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Habit.Measurement)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Habit.Favorite)
            </dt>
            <dd class="col-sm-10">
                @if (Model.Habit.Favorite)
                {
                    <i class="bi bi-heart-fill text-danger"></i>
                }
                else
                {
                    <i class="bi bi-heart text-danger"></i>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Habit.CreatedAt)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Habit.CreatedAt)
            </dd>
        </dl>

        <form method="post" asp-route-id="@Model.Habit.Id" id="delete-form">
            <div>
                <a asp-page="./Index" class="btn btn-secondary">Back to list</a>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                    data-bs-target="#confirm-delete-modal">Delete</button>
            </div>
        </form>
    </div>
}


<div class="modal fade" id="confirm-delete-modal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirm-delete-modal-label">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong>@Model.Habit?.Name</strong> habit?</p>
                <p class="text-danger fw-bold">This will delete all entries for this habit!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirm-delete-button">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Pages/Delete.cshtml.js"></script>
}